<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/backgroundMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btnToCamera"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="170dp"
        android:text="@string/btnToCamera"
        android:background="@drawable/rounded"
        android:fontFamily="@font/coolfonts"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnToUpload"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btnToCamera"
        app:layout_constraintRight_toRightOf="@id/btnToCamera"
        app:layout_constraintLeft_toLeftOf="@id/btnToCamera"
        android:layout_marginTop="50dp"
        android:text="@string/btnToUpload"
        android:background="@drawable/rounded"
        android:fontFamily="@font/coolfonts"
        android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>